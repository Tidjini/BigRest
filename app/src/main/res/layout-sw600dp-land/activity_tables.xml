<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11000000">


    <include layout="@layout/nav_action_bar"/>

    <LinearLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_restaurant_menu_white_24dp"
            android:tint="@color/colorAccent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Server Username"
            android:textSize="16sp"/>

        <ImageView
            android:layout_marginLeft="24dp"

            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_restaurant_white_24dp"
            android:tint="@color/colorAccent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="7 Tables Disponible"
            android:textSize="16sp"/>
        <ImageView
            android:layout_marginLeft="24dp"

            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_send_white_24dp"
            android:tint="@color/colorAccent"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Recent table:"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Table nÂ° 3"
            android:textColor="@color/colorPrimary"

            android:textSize="16sp"/>

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        >
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:orientation="vertical"
            card_view:cardUseCompatPadding="true"
            card_view:cardBackgroundColor="#030B132B"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <fragment

                    android:id="@+id/tables_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"

                    tools:layout="@android:layout/list_content"
                    tools:context="com.soft.big.bigrest.UI.Fragments.TablesFragment"
                    android:name="com.soft.big.bigrest.UI.Fragments.TablesFragment"
                    >

                </fragment>
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <fragment
            tools:context="com.soft.big.bigrest.UI.Fragments.MenuFragment"
            tools:ignore="MergeRootFrame"
            android:id="@+id/menu_fragment"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"

            tools:layout="@android:layout/list_content"
            android:name="com.soft.big.bigrest.UI.Fragments.MenuFragment"
            />

    </LinearLayout>

    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_restaurant_menu_white_24dp"
                android:tint="#000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Server Addresse: 192.168.1.1"
                android:textSize="16sp"/>
        </LinearLayout>

       <Button
           android:layout_width="wrap_content"
           android:layout_height="35dp"
           android:text="Parameters"
           android:textAllCaps="false"
           android:backgroundTint="@color/colorPrimary"
           android:textColor="#FFF"
           />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Advanced"
            android:textAllCaps="false"
            android:backgroundTint="@color/colorAccent"
            />

    </LinearLayout>
</LinearLayout>