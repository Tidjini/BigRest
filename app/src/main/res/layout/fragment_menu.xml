<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.soft.big.bigrest.UI.OrderActivity"
    app:cardBackgroundColor="#FFFFFF"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_margin="16dp"
            android:layout_width="0dp"
            android:layout_weight="1.7"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <!--TODO-->
                    <!--<include layout="@layout/nav_action_bar"/>-->

                    <TextView
                        android:visibility="gone"
                        android:layout_marginTop="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check customer wishes"
                        android:layout_gravity="center"
                        android:textSize="22sp"
                        />
                    <View
                        android:visibility="gone"
                        android:layout_marginRight="56dp"
                        android:layout_marginLeft="56dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorPrimary"
                        android:layout_marginBottom="16dp"/>
                    <android.support.v7.widget.RecyclerView

                        android:id="@+id/rv_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scrollbars="vertical" />

                </LinearLayout>

                <!--TODO-->
                <LinearLayout
                    android:visibility="gone"
                    android:background="#FFF"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:elevation="4dp">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginLeft="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Price: 0.00 DA"
                        android:textSize="18sp"
                        android:textStyle="italic"/>
                </LinearLayout>
            </LinearLayout>



            <FrameLayout
                android:visibility="gone"
                android:layout_below="@id/nav_action_custom_bar"
                android:id="@+id/fl_order_process"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#660E020E">
                <ProgressBar

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
            </FrameLayout>



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"

            >
            <LinearLayout
                android:id="@+id/commande_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 500,00 DA"
                    android:textSize="26sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="32dp"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/commande_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="38dp"
                    android:text="Order"
                    android:textColor="#FFF"
                    android:backgroundTint="@color/colorPrimary"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="38dp"

                    android:text="Close"
                    android:backgroundTint="@color/colorAccent"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/commande_grid_header"
                android:layout_below="@id/commande_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:padding="8dp"
                android:layout_marginTop="4dp"
                >
                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Article"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".8"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".8"
                    android:layout_height="wrap_content"
                    android:text="Number"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/commande_grid_header">
                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    android:padding="8dp"
                    >
                    <TextView

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Article one dum"

                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        android:layout_height="wrap_content"
                        android:text="300 DA"
                        android:textAlignment="textEnd"

                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textAlignment="textEnd"

                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="600 DA"
                        android:textAlignment="textEnd"

                        />

                </LinearLayout>
                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    android:padding="8dp"
                    >
                    <TextView

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Article one dum"

                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        android:layout_height="wrap_content"
                        android:text="300,00 DA"
                        android:textAlignment="textEnd"

                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textAlignment="textEnd"

                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="600,00 DA"
                        android:textAlignment="textEnd"

                        />

                </LinearLayout>
                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    android:padding="8dp"
                    >
                    <TextView

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Article one dum"

                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        android:layout_height="wrap_content"
                        android:text="300,00 DA"
                        android:textAlignment="textEnd"

                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textAlignment="textEnd"

                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="600,00 DA"
                        android:textAlignment="textEnd"

                        />

                </LinearLayout>
                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    android:padding="8dp"
                    >
                    <TextView

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Article one dum"

                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        android:layout_height="wrap_content"
                        android:text="300,00 DA"
                        android:textAlignment="textEnd"

                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textAlignment="textEnd"

                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="600,00 DA"
                        android:textAlignment="textEnd"

                        />

                </LinearLayout>
                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    android:padding="8dp"
                    >
                    <TextView

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Article one dum"

                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        android:layout_height="wrap_content"
                        android:text="300,00 DA"
                        android:textAlignment="textEnd"

                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textAlignment="textEnd"

                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="600,00 DA"
                        android:textAlignment="textEnd"

                        />

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>



</android.support.v7.widget.CardView>

