<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/ic_recent_actors_black_24dp"
        android:tint="#666666"
        />
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Server Username"
        android:textSize="16sp"/>

    <ImageView
        android:layout_marginLeft="24dp"

        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/ic_event_seat_black_24dp"
        android:tint="#666666"
        />
    <TextView
        android:id="@+id/tables_avaibles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="7 Tables Disponible"
        android:textSize="16sp"/>
    <ImageView
        android:layout_marginLeft="24dp"

        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/ic_group_work_black_24dp"
        android:tint="#666666"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Recent table:"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/table_name_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="@color/colorPrimary"

        android:textSize="16sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Refresh"
        android:textAllCaps="false"
        android:layout_marginLeft="8dp"
        android:onClick="onRefreshClicked"/>

</LinearLayout>