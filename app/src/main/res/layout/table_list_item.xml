<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    android:padding="4dp"
    >


    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/iv_table_state_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/table_back"/>
        <!--"#550E0E0E"-->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#990E0E0E"
            ></View>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_capacite_item"
                android:layout_toRightOf="@id/tv_table_number_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TABLE"
                android:textSize="14sp"

                android:textColor="#FFF"

                />
            <TextView
                android:id="@+id/tv_table_number_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_gravity="left"
                android:textColor="#FFF"
                android:textSize="22sp"
                android:textStyle="bold"
                />


        </LinearLayout>
        <ImageView
            android:id="@+id/iv_table_state_item_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_notifications_none_white_24dp"

            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>