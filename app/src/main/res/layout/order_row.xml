<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@id/commande_grid_header"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:padding="8dp"
        >
        <TextView
            android:id="@+id/tv_article_name_order_row"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Article one dum"
            android:textSize="16sp"
            android:textColor="#000"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/tv_price_order_row"
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="wrap_content"
            android:text="300 DA"
            android:textSize="12sp"
            android:textAlignment="textEnd"

            />
        <TextView
            android:id="@+id/tv_number_order_row"
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="12sp"
            android:textAlignment="textEnd"

            />
        <TextView
            android:id="@+id/tv_total_order_row"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="600 DA"
            android:textSize="12sp"
            android:textAlignment="textEnd"

            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"/>

</LinearLayout>